---
import BuyButton from '../../components/BuyButton.tsx';

const {sku} = Astro.params

const response = await fetch(`http://localhost:3002/buy/api/price/${sku}.json`)
const data = await response.json();
---

<div class="shared-class-name">
  Team Buy
  <BuyButton skuId={sku} price={data.price} client:load />
</div>

<style>
  .shared-class-name {
    border: 4px solid brown;
  }
</style>
